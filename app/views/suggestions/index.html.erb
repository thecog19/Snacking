<div class="row">
  <% unless @online %>
    <div class="alert alert-danger">
      <strong>Warning:</strong> This page is down for mantienence.
    </div>
  <% else %>
   Drop down will go here

   <%= @suggestions %>

   <br>
   <h3> Suggest a snack! </h3>
   <%= form_for :suggestion do |f| %>
      <div class="form-group row">
        <label class="col-sm-1 col-form-label" for="snack-form">Snack:</label> 
        <div class="col-sm-10">
          <%= f.text_field :snack_name, class: "form-control", id: "snack-form", placeholder: "snack name" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-1 col-form-label" for="location-form">Location:</label> 
        <div class="col-sm-10">
          <%= f.text_field :location, class: "form-control", id: "location-form", placeholder: "location" %>
        </div>
      </div>
    <%= f.submit "Suggest", class: "btn btn-primary" %>
<% end %>

  <% end %>
</div>